# ===========================================
# 数据库配置 - 使用云数据库
# ===========================================
# 请填入您的云数据库连接信息
DATABASE_URL="mysql://username:password@your-cloud-db-host:3306/database_name"

# 如果使用本地 Docker 数据库，请使用以下格式：
# DATABASE_URL="mysql://root:your-mysql-password@db:3306/personal_game_db"

# ===========================================
# MySQL 数据库配置（仅在使用本地 Docker 数据库时需要）
# ===========================================
# 如果您使用云数据库，可以删除或注释掉这些配置
# MYSQL_ROOT_PASSWORD="your-secure-mysql-password"
# MYSQL_DATABASE="personal_game_db"

# ===========================================
# Redis 配置 - 使用本地 Docker Redis
# ===========================================
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# ===========================================
# JWT 签名密钥
# ===========================================
JWT_SECRET="PersonalGameWebsite2024SecretKey!@#"

# 邮件服务配置（如果使用邮件功能）
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# 应用配置
NODE_ENV="production"
PORT="3000"

# 文件上传配置
UPLOAD_PATH="/app/backend/uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# 安全配置
CORS_ORIGIN="http://localhost"  # 在生产环境中设置为您的域名
RATE_LIMIT_WINDOW="15"  # 分钟
RATE_LIMIT_MAX="100"    # 每个窗口的最大请求数